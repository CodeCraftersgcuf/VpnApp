    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.example.test.ui.home.HomeFragment"
        android:label="Home Fragment"
        tools:layout="@layout/fragment_home">
        <action
            android:id="@+id/action_homeFragment_to_countryListFragment"
            app:destination="@id/countryListFragment" />
    </fragment>

    <fragment
        android:id="@+id/countryListFragment"
        android:name="com.example.test.ui.countryList.CountryListFragment"
        android:label="Country List Fragment"
        tools:layout="@layout/fragment_country_list" />
</navigation>
