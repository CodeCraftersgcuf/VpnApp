<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <!-- Background color -->
        <shape android:shape="rectangle">
            <solid android:color="#98979D" /> <!-- Background color of your LinearLayout -->
        </shape>
    </item>
    <item android:top="0dp" android:bottom="1dp">
        <!-- Top border color -->
        <shape android:shape="rectangle">
            <solid android:color="#1C1B24" /> <!-- Light gray color for the top border -->
            <size android:height="1dp" />
        </shape>
    </item>
</layer-list>
