<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1C1B24"
    tools:context=".PremiumFeaturesActivity">

    <!-- Close Button -->
    <ImageView
        android:id="@+id/closeButton"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_margin="16dp"
        android:src="@drawable/close"
        android:contentDescription="@string/close"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Crown Icon -->
    <ImageView
        android:id="@+id/crownIcon"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginTop="16dp"
        android:src="@drawable/logo_icon"
        app:layout_constraintTop_toBottomOf="@id/closeButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Premium Features Title -->
    <TextView
        android:id="@+id/premiumFeaturesTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/premium_features"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/crownIcon"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Features Icons with Text -->
    <LinearLayout
        android:id="@+id/featuresLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="24dp"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        app:layout_constraintTop_toBottomOf="@id/premiumFeaturesTitle">

        <!-- Anonymous Feature -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">
            <ImageView
                android:id="@+id/anonymousIcon"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/incognito" />

            <TextView
                android:id="@+id/anonymousTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/anonymous"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:layout_marginStart="10dp"
                android:layout_marginTop="0dp" />
            </LinearLayout>
            <TextView
                android:id="@+id/anonymousDescription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/hide_your_ip_with_anonymous_surfing"
                android:textColor="#FFFFFF"
                android:textSize="12sp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="7dp" />
        </LinearLayout>

        <!-- Fast Feature -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="start">
            <ImageView
                android:id="@+id/fastIcon"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginEnd="0dp"
                android:src="@drawable/rocket" />

                <TextView
                    android:id="@+id/fastTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="50dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="8dp"
                    android:text="@string/fast"
                    android:textColor="#FFFFFF"
                    android:textStyle="bold" />
            </LinearLayout>
            <TextView
                android:id="@+id/fastDescription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/up_to_1000_mb_s_bandwidth_nto_explore"
                android:textColor="#FFFFFF"
                android:textSize="12sp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="7dp" />
        </LinearLayout>
    </LinearLayout>

    <!-- Features Icons with Text (Second Row) -->
    <LinearLayout
        android:id="@+id/secondFeaturesLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="16dp"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        app:layout_constraintTop_toBottomOf="@id/featuresLayout">

        <!-- Remove Ads Feature -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">
            <ImageView
                android:id="@+id/removeAdsIcon"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/remove" />

            <TextView
                android:id="@+id/removeAdsTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/remove_ads"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:layout_marginStart="10dp"
                android:layout_marginTop="0dp" />
            </LinearLayout>
            <TextView
                android:id="@+id/removeAdsDescription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/enjoy_the_app_without_annoying_ads"
                android:textColor="#FFFFFF"
                android:textSize="12sp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="7dp" />
        </LinearLayout>

        <!-- Secure Feature -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">
            <ImageView
                android:id="@+id/secureIcon"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/secure" />

            <TextView
                android:id="@+id/secureTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/secure"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="50dp"
                android:layout_marginTop="0dp" />
            </LinearLayout>
            <TextView
                android:id="@+id/secureDescription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/transfer_traffic_via_encrypted_tunnel"
                android:textColor="#FFFFFF"
                android:textSize="12sp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="7dp" />
        </LinearLayout>
    </LinearLayout>

    <!-- Subscription Options -->

    <!-- Try Premium Free Button -->

    <!-- 7-Day Free Trial Label -->


    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:orientation="vertical"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/featuresLayout"
        app:layout_constraintVertical_bias="0.444">

        <!-- 1 Month Option -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:background="@drawable/gradient_background"
            android:orientation="horizontal"
            android:padding="16dp">

            <TextView
                android:id="@+id/oneMonth"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/_1_month"
                android:textColor="#FFFFFF"
                android:textSize="19sp" />

            <TextView
                android:id="@+id/oneMonthPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/_9_99_month"
                android:textColor="#FFFFFF"
                android:textSize="19sp" />
        </LinearLayout>

        <!-- 1 Year Option -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:background="@drawable/gradient_background"
            android:orientation="horizontal"
            android:padding="16dp">

            <TextView
                android:id="@+id/oneYear"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/_1_year"
                android:textColor="#FFFFFF"
                android:textSize="19sp" />

            <TextView
                android:id="@+id/oneYearPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/_4_99_month"
                android:textColor="#FFFFFF"
                android:textSize="19sp" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/button_background"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="16dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        app:layout_constraintTop_toBottomOf="@id/linearLayout"
        tools:layout_editor_absoluteX="20dp">

        <TextView
            android:id="@+id/sixMonth"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/try_premium_free"
            android:textColor="#FFFFFF"
            android:textSize="19sp" />

    </LinearLayout>

    <TextView
        android:id="@+id/freeTrialLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="48dp"
        android:gravity="center"
        android:text="@string/_7_day_free_trial_then_9_99_month"
        android:textColor="#FFFFFF"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout2" />

</androidx.constraintlayout.widget.ConstraintLayout>
