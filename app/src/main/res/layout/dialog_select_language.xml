                    android:textColor="#888888"
                    android:textSize="14sp"
                    android:paddingStart="8dp" />

                <RadioButton
                    android:id="@+id/radio_button_nl"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:buttonTint="#6D4AFF"
                    android:layout_marginStart="16dp" />
            </LinearLayout>

            <!-- Italian -->
            <LinearLayout
                android:id="@+id/language_item_it"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="8dp"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/language_name_it"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Italian"
                    android:textColor="#FFFFFF"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/language_code_it"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="(it)"
                    android:textColor="#888888"
                    android:textSize="14sp"
                    android:paddingStart="8dp" />

                <RadioButton
                    android:id="@+id/radio_button_it"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:buttonTint="#6D4AFF"
                    android:layout_marginStart="16dp" />
            </LinearLayout>

            <!-- Portuguese -->
            <LinearLayout
                android:id="@+id/language_item_pt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="8dp"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/language_name_pt"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
